<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>Assets\Icon-256-ICO.ico</ApplicationIcon>
    <Version>0.1.0-alpha</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\Icon-256-ICO.ico" />
    <None Remove="Assets\Icon-256.png" />
    <None Remove="Assets\Icon-512.png" />
    <None Remove="Assets\placeholder.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\Icon-256-ICO.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.1.0" />
    <PackageReference Include="LiveChartsCore.SkiaSharpView.WPF" Version="2.0.0-beta.700" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="7.0.0" />
    <PackageReference Include="WPF-UI" Version="3.0.0-preview.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ImageFilters.Core\ImageFilters.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\Icon-256-ICO.ico" />
    <Resource Include="Assets\Icon-256.png" />
    <Resource Include="Assets\Icon-512.png" />
    <Resource Include="Assets\placeholder.png" />
  </ItemGroup>

    <!--Implicit usings-->
  <ItemGroup>
    <Using Include="CommunityToolkit.Mvvm.ComponentModel" />
    <Using Include="CommunityToolkit.Mvvm.Input" />
    <Using Include="System.Windows" />
    <Using Include="Wpf.Ui.Contracts" />
    <Using Include="Wpf.Ui.Services" />
  </ItemGroup>

</Project>
